<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>WNA_RobeBoost</defName>
        <label>robe boost</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>Special designs and techniques in alliance robe is helping this pawn performing better than normal.</description>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <everCurableByItem>false</everCurableByItem>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_RemoveIfApparelDropped"/>
        </comps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>3</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>3</postFactor>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>3</postFactor>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <postFactor>3</postFactor>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <postFactor>3</postFactor>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <postFactor>3</postFactor>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <postFactor>3</postFactor>
                    </li>
                </capMods>
                <statFactors>
                    <Flammability>0</Flammability>
                    <MeleeDamageFactor>5</MeleeDamageFactor>
                    <MeleeCooldownFactor>0.05</MeleeCooldownFactor>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>WNA_IllusionCore</defName>
        <label>illusion core</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>This pawn is covered by a stealth field.</description>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <everCurableByItem>false</everCurableByItem>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_RemoveIfApparelDropped"/>
			<li Class="HediffCompProperties_Invisibility">
			  	<visibleToPlayer>false</visibleToPlayer>
                <affectedByDisruptor>false</affectedByDisruptor>
			</li>
        </comps>
        <stages/>
    </HediffDef>

    <HediffDef>
        <defName>WNA_ForceShield</defName>
        <label>force shield</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>This pawn is protected by an individual force shield.</description>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <everCurableByItem>false</everCurableByItem>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_RemoveIfApparelDropped"/>
        </comps>
        <stages>
            <li>
                <statFactors>
                    <IncomingDamageFactor>0</IncomingDamageFactor>
                    <StaggerDurationFactor>0</StaggerDurationFactor>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

</Defs>
