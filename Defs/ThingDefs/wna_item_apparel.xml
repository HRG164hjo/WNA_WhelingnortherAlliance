<Defs>
    <ThingDef Abstract="True" ParentName="WNA_ApparelBase" Name="WNA_ApparelBaseA">
        <recipeMaker>
            <researchPrerequisite>WNA_StandardArsenal</researchPrerequisite>
            <unfinishedThingDef>WNA_UnfinishedThing</unfinishedThingDef>
            <workSkill>Intellectual</workSkill>
            <skillRequirements>
                <Intellectual>12</Intellectual>
		    	<Artistic>8</Artistic>
            </skillRequirements>
            <recipeUsers>
                <li>WNA_RiteSpot_Basic</li>
            </recipeUsers>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="WNA_ApparelBaseA">
        <defName>WNA_AllianceHood</defName>
        <label>alliance hood</label>
        <description>Upper part of WNA standard equipment. This hood covers their eyes, symbolizing one of the WNA's beliefs - don't be blinded by radiance.</description>
        <graphicData>
            <texPath>things/apparel/alliancehood/icon_alliancehood</texPath>
        </graphicData>
	    <costList>
	        <WNA_Focus>20</WNA_Focus>
	        <WNA_DarkAsbestos>40</WNA_DarkAsbestos>
	        <Silver>20</Silver>
	    </costList>
        <statBases>
            <MarketValue>2000</MarketValue>
            <ArmorRating_Sharp>200</ArmorRating_Sharp>
            <ArmorRating_Blunt>200</ArmorRating_Blunt>
            <ArmorRating_Heat>200</ArmorRating_Heat>
        </statBases>
        <equippedStatOffsets>
            <ShootingAccuracyPawn>3</ShootingAccuracyPawn>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
                <li>Neck</li>
            </bodyPartGroups>
            <wornGraphicPath>things/apparel/alliancehood/alliancehood</wornGraphicPath>
            <layers>
                <li>Overhead</li>
                <li>EyeCover</li>
            </layers>
            <blocksAddedPartWoundGraphics>true</blocksAddedPartWoundGraphics>
        </apparel>
        <modExtensions/>
    </ThingDef>
    <ThingDef ParentName="WNA_ApparelBaseA">
		<defName>WNA_AllianceCloak</defName>
		<label>alliance cloak</label>
		<description>Outer layer of WNA standard equipment. This cloak covers almost all of their body, symbolizing some of WNA's thoughts - abnegating what they used to have and to be, to approach transcendence, divinity and salvation.</description>
		<graphicData>
			<texPath>things/apparel/alliancecloak/icon_alliancecloak</texPath>
            <color>(144,144,144)</color>
		</graphicData>
	    <costList>
	        <WNA_Focus>40</WNA_Focus>
	        <WNA_DarkAsbestos>80</WNA_DarkAsbestos>
	        <Silver>30</Silver>
	    </costList>
        <statBases>
            <MarketValue>2000</MarketValue>
            <ArmorRating_Sharp>200</ArmorRating_Sharp>
            <ArmorRating_Blunt>200</ArmorRating_Blunt>
            <ArmorRating_Heat>200</ArmorRating_Heat>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
            </bodyPartGroups>
            <wornGraphicPath>things/apparel/alliancecloak/alliancecloak</wornGraphicPath>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
        </apparel>
        <modExtensions/>
    </ThingDef>
    <ThingDef ParentName="WNA_ApparelBaseA">
		<defName>WNA_AllianceRobe</defName>
		<label>alliance robe</label>
		<description>Inner layer of WNA standard equipment. This robe is durable, reliable and comfortable, exhibiting WNA's good treatment of their own people and their strong logistics scheduling capabilities to some extent.</description>
		<graphicData>
			<texPath>things/apparel/alliancerobe/icon_alliancerobe</texPath>
		</graphicData>
	    <costList>
	        <WNA_Focus>30</WNA_Focus>
	        <WNA_DarkAsbestos>60</WNA_DarkAsbestos>
	        <Silver>20</Silver>
	    </costList>
        <statBases>
            <MarketValue>2000</MarketValue>
            <ArmorRating_Sharp>200</ArmorRating_Sharp>
            <ArmorRating_Blunt>200</ArmorRating_Blunt>
            <ArmorRating_Heat>200</ArmorRating_Heat>
        </statBases>
        <equippedStatOffsets>
            <MeleeDodgeChance>1</MeleeDodgeChance>
            <ImmunityGainSpeed>2</ImmunityGainSpeed>
            <InjuryHealingFactor>2</InjuryHealingFactor>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
            </bodyPartGroups>
            <wornGraphicPath>things/apparel/alliancerobe/alliancerobe</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
        </apparel>
        <comps>
            <li Class="CompProperties_CauseHediff_Apparel">
                <hediff>WNA_RobeBoost</hediff>
            </li>
        </comps>
        <modExtensions/>
    </ThingDef>

